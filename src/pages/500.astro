---
export const prerender = true;

import Meta from "../components/Layouts/Meta";
import Header from "../components/Layouts/Header";
import Footer from "../components/Layouts/Footer";
import ErrorPageContainer from "../components/Routes/Error/Container";
import ErrorMessage from "../components/Routes/Error/Message";
import ServerError from "../components/Routes/Error/Message/ServerError";
import type { SiteOg } from "../components/Layouts/Meta";

const requestedUrl = Astro.url.pathname;

const og: SiteOg = {
	description: "",
	type: "website",
};
---

<Meta title="500" og={og}>
	<Header title="500" />
	<main class="secondIn">
		<ErrorPageContainer>
			<img
				src={"https://images.microcms-assets.io/assets/286786326ac4469587af976e633a89ad/edebd95a1d084339b7fd54a100bbe321/500.jpeg"}
				alt=""
				width="360"
				height="360"
				class="rounded-lg max-w-full h-auto"
				fetch-priority="high"
			/>
			<ErrorMessage>
				<ServerError requestedUrl={requestedUrl} />
			</ErrorMessage>
		</ErrorPageContainer>
	</main>
	<Footer />
</Meta>
